[xboxdrv]
evdev=/dev/input/by-id/usb-8Bitdo_Controller_157F8F8-event-joystick
silent=true

[evdev-absmap]
ABS_X=x1
ABS_Y=y1
ABS_Z=rt
ABS_RX=x2
ABS_RY=y2
ABS_RZ=lt
ABS_HAT0X=dpad_x
ABS_HAT0Y=dpad_y

[evdev-keymap]
BTN_SOUTH=a
BTN_EAST=b
BTN_WEST=x
BTN_NORTH=y
BTN_TL=lb
BTN_TR=rb
BTN_SELECT=back
BTN_START=start
BTN_MODE=guide
BTN_THUMBL=tl
BTN_THUMBR=tr

[axismap]
-y1=y1

[buttonmap]
x=y
y=x
