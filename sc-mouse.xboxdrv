[xboxdrv]
evdev=/dev/input/by-id/usb-Valve_Software_Wired_Controller-if02-event-joystick
silent=true

[evdev-absmap]
ABS_X=x1
ABS_Y=y1
ABS_RX=x2
ABS_RY=y2
#ABS_HAT2X=lt  ;left trigger analog
#ABS_HAT2Y=rt  ;right trigger analog
ABS_HAT0X=dpad_x
ABS_HAT0Y=dpad_y

[axismap]
-y1=y1
-y2=y2

[evdev-keymap]
#BTN_THUMB=tl   ;left pad touch
#BTN_THUMB2=tr  ;right pad touch
BTN_SOUTH=a	;A button push
BTN_EAST=b	;B button push
BTN_NORTH=x	;X button push
BTN_WEST=y	;Y button push
BTN_TL=lb	;left shoulder click
BTN_TR=rb	;right shoulder click
BTN_TL2=lt	;left trigger click
BTN_TR2=rt	;right trigger click
BTN_START=start
BTN_SELECT=back
BTN_MODE=guide
BTN_THUMBL=tl  ;joytick (thumb left) click
#BTN_THUMBR=tr  ;right pad (thumb right) click
#BTN_GEAR_DOWN=tl
#BTN_GEAR_UP=tr
BTN_DPAD_UP=du  ;dpad click up
BTN_DPAD_DOWN=dd  ;dpad click down
BTN_DPAD_LEFT=dl  ;dpad click left
BTN_DPAD_RIGHT=dr  ;dpad click right

[ui-buttonmap]
a=KEY_A
b=KEY_B
x=KEY_X
y=KEY_Y
#4, 5, 6, and 7 are scroll up, down, left, right
lb=BTN_LEFT		;button 1
lb+rb=BTN_MIDDLE	;button 2
rb=BTN_RIGHT		;button 3
start=BTN_FORWARD	;button 10
back=BTN_BACK		;button 11
guide=BTN_TASK		;button 12

[ui-axismap]
x1=REL_X
y1=REL_Y
x2=REL_RX
y2=REL_RY
dpad_x=REL_HWHEEL
dpad_y=REL_WHEEL
rt=REL_MISC
lt=REL_DIAL
